<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adapter_dict_cover"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginEnd="10dip"
        fresco:placeholderImage="@mipmap/icon_default_image"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:retryImage="@mipmap/icon_default_image"
        fresco:retryImageScaleType="focusCrop"
        fresco:failureImage="@mipmap/icon_default_image"
        fresco:failureImageScaleType="focusCrop"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adapter_dict_name"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/adapter_dict_count"
            android:layout_marginTop="10dip"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
